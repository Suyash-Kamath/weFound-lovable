{
  "compilerOptions": {
    /* Language */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "isolatedModules": true,
    "noEmit": true,

    /* React */
    "jsx": "react-jsx",

    /* Type Checking */
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,

    /* Tooling */
    "skipLibCheck": true,
    "types": ["vite/client"]
  },
  "include": ["src"]
}
